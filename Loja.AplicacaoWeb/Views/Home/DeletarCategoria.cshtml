@model Loja.Dominio.Entidades.Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}

<h1>Deletar Categoria</h1>

<h3>Você tem certeza que deseja deletar essa Categoria?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
    </dl>
    
    <form asp-controller="Home" asp-action="DeletarCategoria" asp-route-codigo="@Model.Codigo">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Voltar</a>
    </form>
</div>
